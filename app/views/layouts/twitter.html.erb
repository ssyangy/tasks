<!DOCTYPE html>
<html>
<head>
  <title>Tasks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
				<a class="brand" href="#">Actions.io</a>
				<ul class="nav">
				  <li class="dropdown" id="menu1">
				    <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
				      Project
				      <b class="caret"></b>
				    </a>
				    <ul class="dropdown-menu">
							<% @projects = Project.all %>
							<% @projects.each do |project| %>
				      <li><%= link_to project.name, project_tasks_path(project) %></li>
							<% end %>
				      <li class="divider"></li>
				      <li><%= link_to "+ Create Project", new_project_path %></li>
				    </ul>
				  </li>
					<li class="divider-vertical"></li>
					<li>
						<% if @project.id.nil? %>
						<% else %>
						<%= form_tag project_tasks_path(@project), :method => :POST, :class => "navbar-form pull-left" do %>
							<%= text_field_tag 'content', nil, :class => "span3", :placeholder => "Create task instantly..." %>
						<% end %>
						<% end %>
					</li>
					<li>
						<div class="drop-create span2">Drop files to create...</div>
					</li>
				</ul>
				<ul class="nav pull-right">
					<li class="divider-vertical"></li>
				  <li class="dropdown" id="menu2">
				    <a class="dropdown-toggle" data-toggle="dropdown" href="#menu2">
				      Profile
				      <b class="caret"></b>
				    </a>
				    <ul class="dropdown-menu">
				      <li><%= link_to 'Settings' %></li>
				      <li class="divider"></li>
				      <li><%= link_to "Sign out" %></li>
				    </ul>
				  </li>
				</ul>
				<div class="pull-right">
						<form class="navbar-search">
					  	<input type="text" class="search-query span2" placeholder="Search">
						</form>
				</div>
	    </div>
	  </div>
	</div>

<div id='page-outer'>
	<div id='page-container'>
		<div>
			<div class="page-top">
				<h2><%= @project.name %></h2>
				<div class="btn-group pull-right">
				  <button class="btn <% if action_name == 'index'%>active<%end%>"><%= link_to "Tasks", project_tasks_path(@project) %></button>
				  <button class="btn"><a data-toggle="modal" href="#myModal" >People</a></button>
				  <button class="btn <% if action_name == 'show'%>active<%end%>"><%= link_to "Admin", @project %></button>
				</div>
				<div class="clearfix"></div>
			</div>
			<div class="list">
				<%= yield %>
			</div>
			<div class="updates">
			</div>
		</div>
	</div>
</div>

<div class="modal fade hide" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Create task</h3>
  </div>
  <div class="modal-body">
    <p><label>Title </label><%= text_field_tag :title %></p>
		<p><label>Detail </label><%= text_area_tag :detail %></p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>

</body>
</html>
