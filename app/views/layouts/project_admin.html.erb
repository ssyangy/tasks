<!DOCTYPE html>
<html>
<head>
  <title>Tasks</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
	
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">
				<a class="brand" href="#">Actions.io</a>
				<ul class="nav">
				  <li class="dropdown" id="menu1">
				    <a class="dropdown-toggle" data-toggle="dropdown" href="#menu1">
				      Project
				      <b class="caret"></b>
				    </a>
				    <ul class="dropdown-menu">
							<% @projects = Project.all %>
							<% @projects.each do |project| %>
				      <li><%= link_to project.name, project_tasks_path(project) %></li>
							<% end %>
				      <li class="divider"></li>
				      <li><%= link_to "+ Create Project", new_project_path %></li>
				    </ul>
				  </li>
					<li class="divider-vertical"></li>
					<li>
						<%= text_field_tag 'instant_input', nil, :class => "span3 mt5", :placeholder => "Create task instantly..." %>
					</li>
					<li>
						<div class="drop-create span2">Drop files to create...</div>
					</li>
				</ul>
				<ul class="nav pull-right">
					<li class="divider-vertical"></li>
				  <li class="dropdown" id="menu2">
				    <a class="dropdown-toggle" data-toggle="dropdown" href="#menu2">
				      Profile
				      <b class="caret"></b>
				    </a>
				    <ul class="dropdown-menu">
				      <li><%= link_to 'Settings' %></li>
				      <li class="divider"></li>
				      <li><%= link_to "Sign out" %></li>
				    </ul>
				  </li>
				</ul>
				<div class="pull-right">
						<form class="navbar-search">
					  	<input type="text" class="search-query span2" placeholder="Search">
						</form>
				</div>
	    </div>
	  </div>
	</div>

	<div id='page-outer'>
		<div id='page-container'>
			<div>
				<div class="page-top">
					<% if !@project.id.nil? %>
					<h2><%= @project.name %></h2>
					<div class="btn-group pull-right">
					  <button class="btn <% if action_name == 'index'%>active<%end%>"><%= link_to "Tasks", project_tasks_path(@project) %></button>
					  <button class="btn"><a data-toggle="modal" href="#myModal" >People</a></button>
					  <button class="btn <% if action_name == 'show'%>active<%end%>"><%= link_to "Admin", edit_project_path(@project) %></button>
					</div>
					<% end %>
					<div class="clearfix"></div>
				</div>
			</div>
			<div class="container-fluid">
			  <div class="row-fluid">
					<div class="panel span2" style="padding:8px 0;">
						<div class="panel-inner">
							<ul class="nav nav-list">
							  <li class="nav-header">
							    List header
							  </li>
							  <li class="active">
							    <a href="#">Home</a>
							  </li>
							  <li>
							    <a href="#">Library</a>
							  </li>
							  ...
							</ul>
						</div>
			      <!--Sidebar content-->
			    </div>
			    <div class="span10">
						<%= yield %>
			      <!--Body content-->
			    </div>
			  </div>
			</div>
		</div>
	</div>

	
</body>

</html>
